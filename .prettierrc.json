{
	"$schema": "https://json.schemastore.org/prettierrc",
	"semi": false,
	"tabWidth": 2,
	"singleQuote": true,
	"trailingComma": "none",
	"overrides": [
		{
			"files": [
				"**/*.css",
				"**/*.scss",
				"**/*.html",
        "**/*.vue"
			],
			"options": {
				"singleQuote": false
			}
		}
	],
	"printWidth": 100
}
